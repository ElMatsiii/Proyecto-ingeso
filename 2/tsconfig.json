{
  "compilerOptions": {
    "target": "ES2020",              // Versión moderna de JavaScript
    "module": "ESNext",              // Usa módulos ES (import/export)
    "strict": true,                  // Modo estricto (mejor para errores)
    "esModuleInterop": true,
    "outDir": "./js",                // Salida: archivos JS compilados aquí
    "rootDir": "./ts",               // Entrada: tus archivos TS están aquí
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["ts/**/*.ts"]
}
